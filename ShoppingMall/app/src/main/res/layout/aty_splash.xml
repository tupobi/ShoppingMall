<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg_newyear"
    tools:context="com.example.administrator.shoppingmall.app.AtySplash">

    <TextView
        android:id="@+id/tv_CountDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/tv_count_down_bg_selector"
        android:text="跳过"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <ImageView
        android:src="@drawable/splash_sheep_newyear"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</RelativeLayout>
